{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.acme.com/agent/routing/1.0.0",
  "type": "object",
  "title": "Agent Routing Decision",
  "description": "Routing decision for user statement to appropriate agent",
  "additionalProperties": false,
  "properties": {
    "@context": {
      "type": "object",
      "description": "JSON-LD context for semantic meaning"
    },
    "statement_id": {
      "type": "string",
      "description": "ID of the statement being routed"
    },
    "routed_to_agent": {
      "type": "string",
      "description": "Name of the agent to handle this statement"
    },
    "agent_id": {
      "type": "string",
      "description": "ID of the target agent"
    },
    "intent": {
      "type": "string",
      "description": "Detected user intent"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence in routing decision"
    },
    "reasoning": {
      "type": "string",
      "description": "Explanation of routing decision"
    },
    "route_key": {
      "type": "string",
      "description": "Redis channel/stream to route to"
    },
    "metadata": {
      "type": "object",
      "description": "Additional routing metadata",
      "additionalProperties": true
    }
  },
  "required": [
    "@context",
    "statement_id",
    "routed_to_agent",
    "intent",
    "confidence"
  ]
}
