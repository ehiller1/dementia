{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.acme.com/dataset/query/1.0.0",
  "type": "object",
  "title": "Dataset Query",
  "description": "Query request for dataset agents",
  "properties": {
    "@context": { "type": "object" },
    "query_id": { "type": "string" },
    "dataset_name": { "type": "string" },
    "query_text": { "type": "string" },
    "filters": { "type": "object" },
    "limit": { "type": "integer", "default": 100 }
  },
  "required": ["@context", "query_id", "dataset_name", "query_text"]
}
