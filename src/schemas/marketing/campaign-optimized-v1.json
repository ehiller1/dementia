{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.acme.com/marketing/campaign-optimized/1.0.0",
  "title": "Campaign Optimized Event",
  "description": "Published when an RMN campaign is optimized based on performance or constraints",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "@context": {
      "type": "object",
      "description": "JSON-LD context mapping fields to canonical URIs",
      "properties": {
        "schema": { "type": "string", "const": "https://schema.org/" },
        "ex": { "type": "string", "const": "https://example.com/ontology#" },
        "brand": { "type": "string", "const": "schema:brand" },
        "retailer": { "type": "string", "const": "ex:Retailer" },
        "rmn": { "type": "string", "const": "ex:RetailMediaNetwork" },
        "channel": { "type": "string", "const": "ex:MarketingChannel" },
        "sku": { "type": "string", "const": "schema:sku" },
        "spend": { "type": "string", "const": "ex:MarketingSpend" },
        "roas": { "type": "string", "const": "ex:ReturnOnAdSpend" }
      },
      "required": ["schema", "ex"]
    },
    "brand": {
      "type": "string",
      "description": "Brand name",
      "minLength": 1
    },
    "retailer": {
      "type": "string",
      "description": "Retailer name"
    },
    "rmn": {
      "type": "string",
      "description": "Retail Media Network name"
    },
    "channel": {
      "type": "string",
      "description": "Marketing channel",
      "enum": [
        "Onsite Sponsored Search",
        "Onsite Display",
        "Offsite Programmatic",
        "Retailer Email",
        "Social Media"
      ]
    },
    "sku": {
      "type": "string",
      "description": "Product SKU",
      "pattern": "^[A-Z]{3}-[0-9]{4}$"
    },
    "delta_spend_usd": {
      "type": "number",
      "description": "Change in spend (USD), positive or negative"
    },
    "reason": {
      "type": "string",
      "description": "Why the campaign was optimized",
      "minLength": 10
    },
    "constraints_checked": {
      "type": "boolean",
      "description": "Whether business constraints were validated"
    },
    "roas_before": {
      "type": "number",
      "description": "ROAS before optimization",
      "minimum": 0
    },
    "roas_after_projected": {
      "type": "number",
      "description": "Projected ROAS after optimization",
      "minimum": 0
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the optimization occurred"
    }
  },
  "required": [
    "@context",
    "brand",
    "retailer",
    "rmn",
    "channel",
    "sku",
    "delta_spend_usd",
    "reason"
  ]
}
