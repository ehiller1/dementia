{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.acme.com/mco/anomaly/1.0.0",
  "type": "object",
  "title": "MCO Anomaly Event",
  "description": "Data quality failures and anomalies",
  "properties": {
    "@context": { "type": "object" },
    "anomaly_id": { "type": "string" },
    "type": { "type": "string", "enum": ["data_quality_failure", "late_data", "missing_data", "schema_violation"] },
    "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
    "provider": { "type": "string" },
    "errors": { "type": "array", "items": { "type": "string" } },
    "data_sample": { "type": "object" },
    "timestamp": { "type": "string", "format": "date-time" }
  },
  "required": ["@context", "anomaly_id", "type", "severity", "errors"]
}
