{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.acme.com/mco/observation/1.0.0",
  "type": "object",
  "title": "MCO Observation Event",
  "description": "Marketing campaign performance observation",
  "properties": {
    "@context": { "type": "object" },
    "observation_id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "entity_type": { "type": "string", "enum": ["campaign", "adgroup", "ad", "features"] },
    "entity_id": { "type": "string" },
    "metrics": {
      "type": "object",
      "properties": {
        "spend": { "type": "number" },
        "revenue": { "type": "number" },
        "impressions": { "type": "integer" },
        "clicks": { "type": "integer" },
        "conversions": { "type": "integer" },
        "roas": { "type": "number" },
        "ctr": { "type": "number" },
        "cpm": { "type": "number" }
      }
    },
    "dimensions": {
      "type": "object",
      "properties": {
        "channel": { "type": "string" },
        "geo": { "type": "string" },
        "currency": { "type": "string" }
      }
    },
    "provider": { "type": "string" },
    "quality_score": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "required": ["@context", "observation_id", "timestamp", "entity_type", "entity_id", "metrics"]
}
