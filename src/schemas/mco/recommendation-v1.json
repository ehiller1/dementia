{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.acme.com/mco/recommendation/1.0.0",
  "type": "object",
  "title": "MCO Recommendation Event",
  "description": "Optimization recommendation or forecast",
  "properties": {
    "@context": { "type": "object" },
    "recommendation_id": { "type": "string" },
    "type": { "type": "string", "enum": ["opportunity", "forecast", "baseline"] },
    "entity_id": { "type": "string" },
    "recommended_action": { "type": "string" },
    "impact_estimate": { "type": "number" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
    "timestamp": { "type": "string", "format": "date-time" }
  },
  "required": ["@context", "recommendation_id", "type", "entity_id"]
}
