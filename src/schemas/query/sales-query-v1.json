{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.acme.com/query/sales-query/1.0.0",
  "type": "object",
  "title": "Sales Query",
  "description": "Query for sales data with filters and aggregations",
  "additionalProperties": false,
  "properties": {
    "@context": {
      "type": "object",
      "description": "JSON-LD context for semantic meaning"
    },
    "query_id": {
      "type": "string",
      "description": "Unique query identifier"
    },
    "query_text": {
      "type": "string",
      "description": "Natural language query"
    },
    "filters": {
      "type": "object",
      "description": "Query filters",
      "properties": {
        "date_range": {
          "type": "object",
          "properties": {
            "start_date": {
              "type": "string",
              "format": "date"
            },
            "end_date": {
              "type": "string",
              "format": "date"
            }
          }
        },
        "products": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "regions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "aggregations": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["sum", "avg", "count", "min", "max", "group_by"]
      }
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1000,
      "default": 100
    },
    "requester": {
      "type": "string",
      "description": "User or system requesting data"
    },
    "conversation_id": {
      "type": "string",
      "description": "Conversation context"
    }
  },
  "required": [
    "@context",
    "query_id",
    "query_text"
  ]
}
