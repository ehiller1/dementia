{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.acme.com/query/sales-response/1.0.0",
  "type": "object",
  "title": "Sales Response",
  "description": "Sales data query response with results and summary",
  "additionalProperties": false,
  "properties": {
    "@context": {
      "type": "object",
      "description": "JSON-LD context for semantic meaning"
    },
    "query_id": {
      "type": "string",
      "description": "ID of the query this responds to"
    },
    "results": {
      "type": "array",
      "description": "Query results",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "product": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "revenue": {
            "type": "number"
          },
          "units": {
            "type": "integer"
          },
          "region": {
            "type": "string"
          }
        }
      }
    },
    "summary": {
      "type": "string",
      "description": "Natural language summary of results"
    },
    "aggregates": {
      "type": "object",
      "description": "Aggregated metrics",
      "properties": {
        "total_revenue": {
          "type": "number"
        },
        "total_units": {
          "type": "integer"
        },
        "avg_revenue": {
          "type": "number"
        },
        "record_count": {
          "type": "integer"
        }
      }
    },
    "row_count": {
      "type": "integer",
      "description": "Number of rows returned"
    },
    "execution_time_ms": {
      "type": "integer",
      "description": "Query execution time in milliseconds"
    }
  },
  "required": [
    "@context",
    "query_id",
    "results",
    "row_count"
  ]
}
