{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.acme.com/signal/demand-analysis/1.0.0",
  "type": "object",
  "title": "Demand Analysis",
  "description": "Analysis of demand forecast signal",
  "additionalProperties": false,
  "properties": {
    "@context": {
      "type": "object",
      "description": "JSON-LD context for semantic meaning"
    },
    "signal_id": {
      "type": "string",
      "description": "ID of the signal being analyzed"
    },
    "analysis": {
      "type": "string",
      "description": "Natural language analysis"
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Severity assessment"
    },
    "recommendations": {
      "type": "array",
      "description": "Recommended actions",
      "items": {
        "type": "string"
      }
    },
    "impact": {
      "type": "object",
      "description": "Impact assessment",
      "properties": {
        "revenue_impact_usd": {
          "type": "number"
        },
        "inventory_impact_units": {
          "type": "integer"
        },
        "customer_impact": {
          "type": "string"
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence in analysis"
    },
    "requires_action": {
      "type": "boolean",
      "description": "Whether immediate action is required"
    }
  },
  "required": [
    "@context",
    "signal_id",
    "analysis",
    "severity"
  ]
}
