{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.acme.com/signal/demand-forecast/1.0.0",
  "type": "object",
  "title": "Demand Forecast Signal",
  "description": "Signal from demand forecasting simulation",
  "additionalProperties": false,
  "properties": {
    "@context": {
      "type": "object",
      "description": "JSON-LD context for semantic meaning"
    },
    "signal_id": {
      "type": "string",
      "description": "Unique signal identifier"
    },
    "signal_type": {
      "type": "string",
      "description": "Type of signal",
      "enum": [
        "demand_spike",
        "demand_drop",
        "stockout_risk",
        "overstock_risk",
        "trend_change",
        "seasonality_shift"
      ]
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Signal priority"
    },
    "data": {
      "type": "object",
      "description": "Signal data",
      "properties": {
        "product": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "forecast_value": {
          "type": "number"
        },
        "baseline_value": {
          "type": "number"
        },
        "deviation_percent": {
          "type": "number"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": ["forecast_value"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Signal timestamp"
    },
    "source": {
      "type": "string",
      "description": "Signal source system"
    }
  },
  "required": [
    "@context",
    "signal_id",
    "signal_type",
    "priority",
    "data",
    "timestamp"
  ]
}
