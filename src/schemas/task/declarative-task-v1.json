{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.acme.com/task/declarative-task/1.0.0",
  "type": "object",
  "title": "Declarative Task",
  "description": "Declarative knowledge task from ACT-R templates",
  "additionalProperties": false,
  "properties": {
    "@context": {
      "type": "object",
      "description": "JSON-LD context for semantic meaning"
    },
    "task_id": {
      "type": "string",
      "description": "Unique task identifier"
    },
    "task_type": {
      "type": "string",
      "description": "Type of declarative task"
    },
    "context": {
      "type": "object",
      "description": "Task context and parameters",
      "additionalProperties": true
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "default": "medium"
    },
    "requester": {
      "type": "string",
      "description": "User or system requesting task"
    },
    "conversation_id": {
      "type": "string",
      "description": "Conversation context"
    }
  },
  "required": [
    "@context",
    "task_id",
    "task_type",
    "context"
  ]
}
